    "reflect-metadata": "0.1.13",
    "sinon": "7.3.2",
    "source-map-support": "0.5.12",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "tslint-config-airbnb-base": "0.3.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.5.3"
  },
  "scripts": {
    "test": "nyc mocha --opts ./test/mocha.opts",
    "build": "tsc",
    "clean:build": "rm -rf ./build",
